  "scripts": {
    "test": "hardhat test",
    "test:mocha": "mocha",
    "build": "yarn ci:clean && yarn compile",
    "compile": "hardhat --max-memory 4096 compile",
    "deploy:local": "hardhat run --network localhost scripts/deploy.ts",
    "deploy:ganache": "hardhat run --network ganache scripts/deploy.ts",
    "deploy:rinkeby": "hardhat run --network rinkeby scripts/deploy.ts",
    "size-contracts": "hardhat size-contracts",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "ci:test": "yarn compile && yarn test",
    "ci:clean": "rm -rf ./artifacts ./cache ./types"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wjsxqs/solidity-contract-template.git"
  },
  "keywords": [
    "Solidity",
    "Template",
    "Contract"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.7",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "2.6.7",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "mocha": "^9.1.3",
    "solhint": "^3.3.6",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4"
  }
}
